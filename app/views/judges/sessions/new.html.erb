<% content_for :title do %>
  评分入口
<% end %>

<%= render partial: "share/banner" %>

<div class="wrap">
  <div class="login">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.select :login, Judge.all.collect{ |j| j.name }.insert(0, '请选择您的名称') %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "密码" %>
      </div>

      <div class="actions">
        <%= f.submit "我要登录", class: "mbtn", data: { disable_with: '正在登录...' } %>
      </div>
    <% end %>
  </div>
  <div class="suport text-center">大唐邦彦（上海）信息技术有限公司<br/>技术支持</div>
</div>