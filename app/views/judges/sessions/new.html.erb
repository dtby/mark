<% content_for :title do %>
  评分入口
<% end %>

<%= render partial: "share/banner" %>

<div class="wrap">
  <div class="login">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :login, autofocus: true, class: "login-input", placeholder: "手机号" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", class: "login-input", placeholder: "密码" %>
      </div>

      <div class="actions">
        <%= f.submit "我要登录", class: "login-input mbtn", data: { disable_with: '正在登录...' } %>
      </div>
    <% end %> 
  </div> 
</div>