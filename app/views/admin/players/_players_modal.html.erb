<div id="playerModal" class="modal fade rooms-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title"><span class="text-primary"><%#= player.name %></span>添加参赛者信息</h3>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_for [:admin, player], remote: true, format: :js do |f| %>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :number, class: 'form-control', placeholder: '编号'%>
              </div>
              <% if player.errors[:number].any? %>
                <dd class="error text-danger"><%= player.errors[:number][0] %></dd>
              <% end %>
            </div>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :name, class: 'form-control', placeholder: '姓名'%>
              </div>
              <% if player.errors[:name].any? %>
                <dd class="error text-danger"><%= player.errors[:name][0] %></dd>
              <% end %>
            </div>
             <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :college, class: 'form-control', placeholder: '院校'%>
              </div>
              <% if player.errors[:college].any? %>
                <dd class="error text-danger"><%= player.errors[:college][0] %></dd>
              <% end %>
            </div>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :title, class: 'form-control', placeholder: '说课名称'%>
              </div>
              <% if player.errors[:title].any? %>
                <dd class="error text-danger"><%= player.errors[:title][0] %></dd>
              <% end %>
            </div>
            <div class="text-center">
              <%= f.submit "提交", class: "btn sub-btn btn-primary", data: { disable_with: '正在提交...' } %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
