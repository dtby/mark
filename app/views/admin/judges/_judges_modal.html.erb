<div id="judgeModal" class="modal fade rooms-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title"><span class="text-primary"><%#= judge.name %></span>添加评委信息</h3>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_for [:admin, judge], remote: true, format: :js do |f| %>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :name, class: 'form-control', placeholder: '姓名'%>
              </div>
              <% if judge.errors[:name].any? %>
                <dd class="error text-danger"><%= judge.errors[:name][0] %></dd>
              <% end %>
            </div>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :email, class: 'form-control', placeholder: '邮箱'%>
              </div>
              <% if judge.errors[:email].any? %>
                <dd class="error text-danger"><%= judge.errors[:email][0] %></dd>
              <% end %>
            </div>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :phone, class: 'form-control', onkeyup:"KeyP(this);", placeholder: '手机'%>
              </div>
              <% if judge.errors[:phone].any? %>
                <dd class="error text-danger"><%= judge.errors[:phone][0] %></dd>
              <% end %>
            </div>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :password, class: 'form-control txt', placeholder: '默认密码'%>
              </div>
              <% if judge.errors[:password].any? %>
                <dd class="error text-danger"><%= judge.errors[:password][0] %></dd>
              <% end %>
            </div>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :password_confirmation, class: 'form-control txt', placeholder: '默认密码'%>
              </div>
              <% if judge.errors[:password_confirmation].any? %>
                <dd class="error text-danger"><%= judge.errors[:password_confirmation][0] %></dd>
              <% end %>
            </div>
            <div class="text-center">
              <%= f.submit "提交", class: "btn sub-btn btn-primary", data: { disable_with: '正在提交...' } %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  function KeyP(v){
    document.getElementsByClassName("txt").value = v.value;
  }
</script>
