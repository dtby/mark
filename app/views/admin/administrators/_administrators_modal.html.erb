<div id="administratorModal" class="modal fade rooms-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title"><span class="text-primary"><%#= administrator.email %></span>添加管理员信息</h3>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_for [:admin, administrator], remote: true, format: :js do |f| %>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :email, class: 'form-control', placeholder: '姓名'%>
              </div>
              <% if administrator.errors[:email].any? %>
                <dd class="error text-danger"><%= administrator.errors[:email][0] %></dd>
              <% end %>
            </div>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :password, class: 'form-control txt', placeholder: '密码'%>
              </div>
              <% if administrator.errors[:password].any? %>
                <dd class="error text-danger"><%= administrator.errors[:password][0] %></dd>
              <% end %>
            </div>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :password_confirmation, class: 'form-control txt', placeholder: '确认密码'%>
              </div>
              <% if administrator.errors[:password_confirmation].any? %>
                <dd class="error text-danger"><%= administrator.errors[:password_confirmation][0] %></dd>
              <% end %>
            </div>
            <div class="text-center">
              <%= f.submit "提交", class: "btn sub-btn btn-primary", data: { disable_with: '正在提交...' } %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>